{
    "name": "wwppc-server",
    "private": true,
    "scripts": {
        "build": "tsc",
        "start": "node build/server.js --expose-gc",
        "dev": "tsc && node build/server.js debug_mode --expose-gc --trace-warnings",
        "gendocs": "typedoc src/* --plugin typedoc-plugin-markdown --excludeExternals --externalPattern \"**/node_modules/**\""
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "html-minifier": "^4.0.0",
        "inline-css": "^4.0.2",
        "node-input-validator": "^4.5.1",
        "nodemailer": "^6.9.13",
        "pg": "^8.11.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/html-minifier": "^4.0.5",
        "@types/inline-css": "^3.0.3",
        "@types/nodemailer": "^6.4.14",
        "@types/pg": "^8.11.2",
        "@types/uuid": "^10.0.0",
        "typedoc-plugin-markdown": "^4.3.0",
        "typescript": "^5.5.4"
    }
}
